		System.out.println("press3 to edit contact");
		
		while(true) {
			int choice = sc.nextInt();
			switch(choice) {
			case 1:
				
				break;
			case 2:
				
				break;
			case 3:
			
				break;
			case 4:
				MainClass.main(args);
			}
	}
	}
}
