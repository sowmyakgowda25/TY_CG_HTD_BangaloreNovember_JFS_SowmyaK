package com.capgemini.fms_springboot.controller;

import java.util.Arrays;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.capgemini.fms_springboot.dto.LoginBean;
import com.capgemini.fms_springboot.dto.LoginResponse;
import com.capgemini.fms_springboot.services.AdminService;

@RestController
public class Admin {
	
	@Autowired
	private AdminService service;
	
	@PostMapping(path = "/adminRegister",produces = MediaType.APPLICATION_JSON_VALUE,
			consumes = MediaType.APPLICATION_JSON_VALUE)
	public LoginResponse adminRegister(@RequestBody LoginBean bean)  {
		LoginResponse response = new LoginResponse();
		
		if(service.adminRegister(bean)) {
			response.setStatusCode(201);
			response.setMessage("Success");
			response.setDiscription("admin Registered successfully..");
		}
		return response;
	}
	
	@PostMapping(path = "/admin-Login",produces = MediaType.APPLICATION_JSON_VALUE, 
			consumes = MediaType.APPLICATION_JSON_VALUE)
	public  LoginResponse adminLogin(@RequestBody LoginBean bean){
		
		LoginResponse response = new LoginResponse();
		if(service.adminLogin(bean.getAdminName(), bean.getPassword(), bean.getType())) {
			response.setStatusCode(201);
			response.setMessage("Success");
			response.setDiscription("Admin found for Credentilas");
			response.setBean(Arrays.asList(bean));
		}else {
			response.setStatusCode(401);
			response.setMessage("Exception");
			response.setDiscription("Invalid Credentials");
		}
		return response;
	}
	
	@PostMapping(path = "/clientSignUp",produces = MediaType.APPLICATION_JSON_VALUE,
			consumes = MediaType.APPLICATION_JSON_VALUE)
	public LoginResponse clientSignUp(@RequestBody LoginBean bean)  {
		LoginResponse response = new LoginResponse();
		
		if(service.clientSignUp(bean)) {
			response.setStatusCode(201);
			response.setMessage("Success");
			response.setDiscription("Client Registered successfully..");
		}
//		else {
//			response.setStatusCode(401);
//			response.setMessage("Failure");
//			response.setDiscription("Contractor already exists");
//		}
		return response;
	}
	
	PostMapping(path = "/schedularSignUp",produces = MediaType.APPLICATION_JSON_VALUE,
			consumes = MediaType.APPLICATION_JSON_VALUE)
	public LoginResponse schedularSignUp(@RequestBody LoginBean bean)  {
		LoginResponse response = new LoginResponse();
		
		if(service.schedularSignUp(bean)) {
			response.setStatusCode(201);
			response.setMessage("Success");
			response.setDiscription("schedular Registered");
		}
//		else {
//			response.setStatusCode(401);
//			response.setMessage("Failure");
//			response.setDiscription("Contractor already exists");
//		}
		return response;
	}
}
